<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.aidlclient.MainActivity">

    <EditText
        android:id="@+id/et_a"
        android:inputType="number"
        android:layout_width="match_parent"
        android:hint="输入a"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_b"
        android:inputType="number"
        android:hint="输入b"
        android:layout_below="@+id/et_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_get_sum"
        android:layout_below="@+id/et_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="求和"/>
    <TextView
        android:id="@+id/tv_sum"
        android:layout_below="@+id/btn_get_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
